{
	"name": "yourgame-server",
	"version": "0.0.1",
	"description": "The API for yourgame",
	"main": "index.js",
	"scripts": {
		"build": "babel src --out-dir dist --copy-files",
		"dev": "nodemon --exec npm run restart",
		"restart": "rimraf dist && npm run build && npm start",
		"start": "node --require dotenv/config ./dist/index.js",
		"dev:inspect": "nodemon --exec npm run restart:inspect",
		"restart:inspect": "rimraf dist && npm run build && npm run start:inspect",
		"start:inspect": "node --inspect --require dotenv/config ./dist/index.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"lint": "eslint --ignore-path .gitignore \"**/*.js\"",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
		"check-format": "npm run prettier -- --list-different",
		"format": "npm run prettier -- --write",
		"validate": "npm-run-all --parallel check-format lint build"
	},
	"author": "Akash Mohan",
	"license": "ISC",
	"dependencies": {
		"@sentry/node": "^6.3.4",
		"axios": "^0.21.1",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"firebase": "^8.4.3",
		"firebase-admin": "^9.7.0",
		"google-auth-library": "^6.1.3",
		"logdna-winston": "^3.0.5",
		"mongoose": "^6.2.11",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.13.16",
		"@babel/core": "^7.14.0",
		"@babel/eslint-parser": "^7.13.14",
		"@babel/preset-env": "^7.14.0",
		"@types/jest": "^26.0.23",
		"dotenv": "^8.2.0",
		"eslint": "^7.25.0",
		"eslint-config-prettier": "^8.3.0",
		"faker": "^5.5.3",
		"eslint-plugin-jest": "^24.3.6",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && npm run build"
		}
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true,
			"es6": true
		},
		"plugins": [
			"jest"
		],
		"extends": [
			"eslint:recommended",
			"prettier",
			"plugin:jest/recommended"
		],
		"parser": "@babel/eslint-parser",
		"parserOptions": {
			"requireConfigFile": false
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"**/*.+(js|json)": [
			"prettier --write"
		]
	}
}
